#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        Main_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | MLY1 |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  ENT   |
            // | LSHFT|  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | RSHFT  |
            //                    | CTL | WIN | ALT |   | MLY2 | RSE  | [ |

            bindings = <
&kp TAB    &kp Q  &kp W  &kp E             &kp R         &kp T           &kp Y  &kp U      &kp I      &kp O    &kp P     &kp BACKSPACE
&mo 1      &kp A  &kp S  &kp D             &kp F         &kp G           &kp H  &kp J      &kp K      &kp L    &kp SEMI  &kp ENTER
&kp LSHFT  &kp Z  &kp X  &kp C             &kp V         &kp B           &kp N  &kp M      &kp COMMA  &kp DOT  &kp FSLH  &kp RIGHT_SHIFT
                         &kp LEFT_CONTROL  &kp LEFT_WIN  &kp LEFT_ALT    &mo 2  &kp SPACE  &kp RALT
            >;

            label = "MAZZIO                                                                     ";
        };

        N_S_B {
            // -----------------------------------------------------------------------------------------
            // | TAB | SLK | HM  | UP  | PgUp| BTNP|          | N7  | N8  | N9  |  -  |  /  |FWSP |
            // | TL0 | CLK | LFT |     | RGT | BTDP|          | N4  | N5  | N6  | +   |  *  | ENT |
            // |LSHFT| INS | END | DWN | PgDn| BTCP|          | N1  | N2  | N3  | INT | NLK |RSHFT|
            //                   | CTL | WIN | ALT |          | TL1 | SPC | ALT |

            bindings = <
&kp ESCAPE      &trans  &kp HOME        &kp UP_ARROW      &kp PAGE_UP      &trans          &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp KP_SUBTRACT  &kp KP_DIVIDE    &bt BT_CLR
&to 0           &trans  &kp LEFT_ARROW  &kp SCROLLLOCK    &kp RIGHT_ARROW  &trans          &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp KP_PLUS      &kp KP_MULTIPLY  &bt BT_NXT
&kp LEFT_SHIFT  &trans  &kp LC(END)     &kp DOWN          &kp PAGE_DOWN    &trans          &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp KP_ENTER     &kp KP_NUMLOCK   &kp RIGHT_SHIFT
                                        &kp LEFT_CONTROL  &kp LEFT_WIN     &kp LEFT_ALT    &to 1            &kp KP_NUMBER_0  &kp KP_DOT
            >;

            label = "N-S-B";
        };

        F_N_S {
            // -----------------------------------------------------------------------------------------
            // | F1  | F2  | F3  | F4  | F5  | F6  |          | F7  | F8  | F9  | F10 | F11 | F12 |
            // | TL2 |  1  |  2  |  3  |  4  |  5  |          |  6  |  7  |  8  |  9  |  0  | ENT |
            // |LSHFT|  |  |  '  |  Â¿  |  +  |  {  |          |  }  |     |     |     |     |RSHFT|
            //                   | CTL | WIN | ALT |         | TL0 |PRSC |PAUSE|

            bindings = <
&kp F1     &kp F2        &kp F3        &kp F4            &kp F5        &kp F6          &kp F7        &kp F8        &kp F9        &kp F10       &kp F11       &kp F12
&to 2      &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3      &kp NUMBER_4  &kp NUMBER_5    &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0  &trans
&kp LSHFT  &trans        &trans        &trans            &trans        &trans          &trans        &trans        &trans        &trans        &trans        &kp RIGHT_SHIFT
                                       &kp LEFT_CONTROL  &kp LEFT_WIN  &kp LEFT_ALT    &to 0         &trans        &trans
            >;

            label = "F-N-S";
        };
    };
};
